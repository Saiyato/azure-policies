{
  "type": "Microsoft.Authorization/policyDefinitions",
  "name": "require-resource-group-environment-tag",
  "apiVersion": "2021-06-01",
  "properties": {
    "displayName": "Enforce using environment tag when deploying Resource Groups",
    "description": "This policy requires Resource Groups to be created with an environment tag.",
    "policyType": "Custom",
    "mode": "All",
    "metadata": {
      "category": "Tags"
    },
    "parameters": {
      "environment": {
        "type": "string",
        "metadata": {
          "displayName": "Environment",
          "description": "Name of the tag"
        },
        "defaultValue": "environment"
      },
      "environmentValues": {
        "type": "array",
        "metadata": {
          "displayName": "Environment",
          "description": "To what environment does this resource belong: Development, Test, Acceptance or Production?"
        },
        "defaultValue": [
          "Development",
          "Test",
          "Acceptance",
          "Production"
        ]
      }
    },
    "policyRule": {
      "if": {
        "allOf": [
          {
            "field": "type",
            "equals": "Microsoft.Resources/subscriptions/resourceGroups"
          },
          {
            "field": "[concat('tags[', parameters('environment'), ']')]",
            "notIn": "[parameters('environmentValues')]"
          }
        ]
      },
      "then": {
        "effect": "deny"
      }
    }    
  }
}
